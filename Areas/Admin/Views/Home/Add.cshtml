@model Category
@{
    ViewData["Title"] = "Add";
}

<h1>Add new category</h1>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CategoryName">Category Name:</label>
        <input asp-for="CategoryName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Category Description:</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="btn btn-outline-primary">Create new category</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Cancel</a>
</form>