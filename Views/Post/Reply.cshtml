@model PostReply
@{
    ViewData["Title"] = "Reply";
}

<h1>Reply</h1>

<form asp-action="Reply" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Body">Body: </label>
        <textarea asp-for="Body" class="form-control" rows="4"></textarea>
    </div>

    <input type="hidden" asp-for="PostId" />
    <button type="submit" class="btn btn-outline-primary">Post</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Cancel</a>
</form>