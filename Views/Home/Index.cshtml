@model List<Category>

    <div class="list-group">
        @foreach (var cat in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Home" asp-action="Category" asp-route-id="@cat.CategoryId" class="text-dark"><b>@cat.CategoryName</b></a>
                <p>@cat.Description</p>
            </li>
        }
    </div>