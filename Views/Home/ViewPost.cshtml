@model PostViewModel
@{
    ViewData["Title"] = "ViewPost";
    Post post = ViewData["Post"] as Post;
    IEnumerable<PostReply> replies = ViewData["PostReplies"] as IEnumerable<PostReply>;
}

<div class="row">
    <div class="col-sm-12 col-md-6">
        <h1>Post</h1>
        <ul class="list-group">
            <li class="list-group-item">
                <h1>@post.Title</h1>
                <p>posted on @post.DateCreated.ToString()</p>
                <p>@post.Body</p>
            </li>
        </ul>
        <a asp-controller="Post" asp-action="Reply" asp-route-id="@post.PostId">Add a reply</a>
    </div>
    <div class="col-sm-12 col-md-6">
        <h1>Replies</h1>
        <ul class="list-group">
            @foreach (var reply in replies)
            {
                <li class="list-group-item">
                    <h2>RE: @Model.post.Title</h2>
                    <p>posted on @reply.DateCreated.ToString()</p>
                    <p>@reply.Body</p>
                </li>
            }
        </ul>
    </div>
</div>